<h1>New Game</h1>

<form action="<%= games_url %>" method="post">
  <input type="hidden" name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for:"theme">Theme:</label>
  <select name="game[theme_id]">
  <% Theme.all.each do |theme| %>
    <option value="<%= theme.id %>" <%= "selected" if @game.theme == theme %>>
    <%= theme.name %></option>
  <% end %>
  </select>
  <%= link_to "New Theme", new_theme_url, class: "button small-button" %>
  <br>

  <h3>Players:</h3><br>
  <ul>
  <% User.all.each do |user| %>
    <li>
      <label for="<%= user.name %>"><%= user.name.capitalize  %></label>
      <input type="checkbox" name="game[user_ids][]" value="<%= user.id %>"
        id="<%= user.name %>">
    </li>
  <% end %>
  </ul>

  <div class="buttons"></div>
    <%= link_to "Cancel", games_url, class: "button" %>
    <input type="submit" value="Create Game" class="button">
  </div>
</form>

