<h1>My Themes</h1>

<section class="themes">
  <ul class="group">
  <% current_user.themes.each do |theme| %>
    <li>
      <%= theme.name %>
      <ul class="group">
        <li><%= link_to "Edit", edit_theme_url(theme), class: "button small-button" %></li>
        <li><%= button_to "Delete", theme_url(theme), method: "delete", class: "button small-button",
          data: { confirm: "Are you sure you wish to discard this theme?\nThis is permanent!" } %></li>
      </ul>
    </li>
  <% end %>
  </ul>
</section>

<div class="buttons">
  <a href="/" class="button">Main Menu</a>
  <a href="/themes/new" class="button">New Theme</a>
</div>